<div class='container-fluid'>
  <div class='row'>
    <div class="page-header">
      <h1>Items <small><%= @items.size %></small></h1>
    </div>
  </div>

  <div class='row'>
    <div class='md-col-8' %>
      <table class='table table-hover'>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.description %></td>
              <td><%= link_to 'Traits', item_traits_path(item) %></td>
              <td><%= link_to 'Instances', item_instances_path(item) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class='row'>
    <div class='md-col-4'>
      <%= link_to 'New Item', new_item_path, class: 'btn btn-primary', role: 'button' %>
    </div>
  </div>
</div>
