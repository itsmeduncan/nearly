<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-8'%>
      <div class="page-header">
        <h1>New instance of <%= @item.description.downcase %></h1>
      </div>
    </div>
  </div>

  <% if flash.present? %>
    <div class='row'>
      <div class='col-md-4'%>
        <%= render partial: 'layouts/alerts' %>
      </div>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-4'%>
      <%= form_for [@item, @instance] do |f| %>
        <div class="form-group">
          <%= f.label :quantity %>
          <%= f.text_field :quantity, class: 'form-control', placeholder: 'Item quantity' %>
        </div>
        <div class='form-group'>
          
        </div>
        <%= f.submit 'Create', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', items_path, class: 'btn btn-default', role: 'button' %>
      <% end %>
    </div>
  </div>
